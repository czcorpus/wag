{
    "compilerOptions": {
        "outDir": "./dist",
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "node16",
        "target": "esnext",
        "jsx": "react-jsx",
        "moduleResolution": "node16",
        "skipLibCheck": true,
        "baseUrl": ".",
        "preserveSymlinks": true,
        "strictNullChecks": false
    },
    "include": [
        "./src/js/**/*"
    ],
    "exclude": [
        "./src/js/server"
    ]
}
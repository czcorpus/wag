{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "additionalProperties": {
        "$ref": "#/definitions/LayoutsConfig"
    },
    "definitions": {
        "GroupLayoutConfig": {
            "properties": {
                "groupDescURL": {
                    "anyOf": [
                        {
                            "additionalProperties": {
                                "type": "string"
                            },
                            "type": "object"
                        },
                        {
                            "type": "string"
                        }
                    ]
                },
                "groupLabel": {
                    "anyOf": [
                        {
                            "additionalProperties": {
                                "type": "string"
                            },
                            "type": "object"
                        },
                        {
                            "type": "string"
                        }
                    ]
                },
                "groupTemplate": {
                },
                "tiles": {
                    "items": {
                        "properties": {
                            "tile": {
                                "type": "string"
                            },
                            "width": {
                                "type": "number"
                            }
                        },
                        "required": [
                            "tile",
                            "width"
                        ],
                        "type": "object"
                    },
                    "type": "array"
                }
            },
            "required": [
                "groupLabel",
                "tiles"
            ],
            "type": "object"
        },
        "LayoutConfigCmpQuery": {
            "properties": {
                "groups": {
                    "items": {
                        "anyOf": [
                            {
                                "$ref": "#/definitions/GroupLayoutConfig"
                            },
                            {
                                "type": "string"
                            }
                        ]
                    },
                    "type": "array"
                },
                "maxQueryWords": {
                    "type": "number"
                }
            },
            "required": [
                "groups"
            ],
            "type": "object"
        },
        "LayoutConfigSingleQuery": {
            "properties": {
                "groups": {
                    "items": {
                        "anyOf": [
                            {
                                "$ref": "#/definitions/GroupLayoutConfig"
                            },
                            {
                                "type": "string"
                            }
                        ]
                    },
                    "type": "array"
                },
                "maxQueryWords": {
                    "type": "number"
                }
            },
            "required": [
                "groups"
            ],
            "type": "object"
        },
        "LayoutConfigTranslatQuery": {
            "properties": {
                "groups": {
                    "items": {
                        "anyOf": [
                            {
                                "$ref": "#/definitions/GroupLayoutConfig"
                            },
                            {
                                "type": "string"
                            }
                        ]
                    },
                    "type": "array"
                },
                "maxQueryWords": {
                    "type": "number"
                },
                "targetLanguages": {
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                }
            },
            "required": [
                "groups",
                "targetLanguages"
            ],
            "type": "object"
        },
        "LayoutsConfig": {
            "properties": {
                "cmp": {
                    "$ref": "#/definitions/LayoutConfigCmpQuery"
                },
                "single": {
                    "$ref": "#/definitions/LayoutConfigSingleQuery"
                },
                "translat": {
                    "$ref": "#/definitions/LayoutConfigTranslatQuery"
                }
            },
            "type": "object"
        }
    },
    "description": "These types are necessary to create config schemata\nusing Makefile for tiles and layouts only",
    "type": "object"
}


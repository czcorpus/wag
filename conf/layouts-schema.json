{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "additionalProperties": {
        "$ref": "#/definitions/LayoutsConfig"
    },
    "definitions": {
        "GroupLayoutConfig": {
            "properties": {
                "groupDescURL": {
                    "anyOf": [
                        {
                            "additionalProperties": {
                                "type": "string"
                            },
                            "type": "object"
                        },
                        {
                            "type": "string"
                        }
                    ]
                },
                "groupLabel": {
                    "anyOf": [
                        {
                            "additionalProperties": {
                                "type": "string"
                            },
                            "type": "object"
                        },
                        {
                            "type": "string"
                        }
                    ]
                },
                "groupTemplate": {
                },
                "tiles": {
                    "items": {
                        "properties": {
                            "tile": {
                                "type": "string"
                            },
                            "width": {
                                "type": "number"
                            }
                        },
                        "required": [
                            "tile",
                            "width"
                        ],
                        "type": "object"
                    },
                    "type": "array"
                }
            },
            "required": [
                "groupLabel",
                "tiles"
            ],
            "type": "object"
        },
        "LayoutsConfig": {
            "properties": {
                "cmp": {
                    "properties": {
                        "allowMultiWordQuery": {
                            "type": "boolean"
                        },
                        "groups": {
                            "items": {
                                "anyOf": [
                                    {
                                        "$ref": "#/definitions/GroupLayoutConfig"
                                    },
                                    {
                                        "type": "string"
                                    }
                                ]
                            },
                            "type": "array"
                        }
                    },
                    "required": [
                        "groups"
                    ],
                    "type": "object"
                },
                "single": {
                    "properties": {
                        "allowMultiWordQuery": {
                            "type": "boolean"
                        },
                        "groups": {
                            "items": {
                                "anyOf": [
                                    {
                                        "$ref": "#/definitions/GroupLayoutConfig"
                                    },
                                    {
                                        "type": "string"
                                    }
                                ]
                            },
                            "type": "array"
                        }
                    },
                    "required": [
                        "groups"
                    ],
                    "type": "object"
                },
                "translat": {
                    "properties": {
                        "allowMultiWordQuery": {
                            "type": "boolean"
                        },
                        "groups": {
                            "items": {
                                "anyOf": [
                                    {
                                        "$ref": "#/definitions/GroupLayoutConfig"
                                    },
                                    {
                                        "type": "string"
                                    }
                                ]
                            },
                            "type": "array"
                        },
                        "targetLanguages": {
                            "items": {
                                "type": "string"
                            },
                            "type": "array"
                        }
                    },
                    "required": [
                        "groups",
                        "targetLanguages"
                    ],
                    "type": "object"
                }
            },
            "type": "object"
        }
    },
    "description": "These types are necessary to create config schemata\nusing Makefile for tiles and layouts only",
    "type": "object"
}


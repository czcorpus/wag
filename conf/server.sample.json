{
    "$schema": "./server-schema.json",
    "address": "localhost",
    "port": 3000,
    "staticFilesUrl": "/wag/assets/",
    "distFilesUrl": "/wag/dist/",
    "theme": "default.less",
    "langCookie": "wdg_ui_lang",
    "languages": {
        "en-US": "English",
        "cs-CZ": "Čeština"
    },
    "toolbar": {
        "type": "langSwitch",
        "url": "https://www.korpus.cz/toolbar/toolbar"
    },
    "develServer": {
        "port": 9001,
        "urlRootPath": "/wag/"
    },
    "freqDB": {
        "single": {
            "minLemmaFreq": 2,
            "similarFreqWordsMaxCtx": 10,
            "databases": {
                "cs": {
                    "path": "/path/to/databases/czech-words.db",
                    "corpusSize": 12345
                },
                "en": {
                    "path": "/path/to/databases/enf-words.db",
                    "corpusSize": 12345
                }
            }
        },
        "cmp": {
            "minLemmaFreq": 2,
            "databases": {
                "cs": {
                    "path": "/path/to/databases/czech-words.db",
                    "corpusSize": 12345
                },
                "en": {
                    "path": "/path/to/databases/enf-words.db",
                    "corpusSize": 12345
                }
            }
        },
        "translat": {
            "minLemmaFreq": 2,
            "databases": {
                "cs": {
                    "path": "/path/to/databases/czech-words.db",
                    "corpusSize": 12345
                },
                "en": {
                    "path": "/path/to/databases/enf-words.db",
                    "corpusSize": 12345
                }
            }
        }
    }
}

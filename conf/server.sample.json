{
    "$schema": "./server-schema.json",
    "address": "localhost",
    "port": 3000,
    "distFilesUrl": "/wag/dist/",
    "theme": "default.less",
    "langCookie": {"domain": "korpus", "name": "cs"},
    "languages": {
        "en-US": "English",
        "cs-CZ": "Čeština"
    },
    "toolbar": {
        "type": "langSwitch",
        "url": "https://www.korpus.cz/toolbar/toolbar"
    },
    "develServer": {
        "port": 9001,
        "urlRootPath": "/wag/"
    },
    "freqDB": {
        "single": {
            "minLemmaFreq": 2,
            "similarFreqWordsMaxCtx": 10,
            "maxQueryWords": 3,
            "databases": {
                "cs": {
                    "path": "/path/to/databases/czech-words.db",
                    "corpusSize": 12345,
                    "dbType": "sqlite"
                },
                "en": {
                    "path": "/path/to/databases/enf-words.db",
                    "corpusSize": 12345,
                    "dbType": "sqlite"
                }
            }
        },
        "cmp": {
            "minLemmaFreq": 2,
            "maxQueryWords": 3,
            "databases": {
                "cs": {
                    "path": "/path/to/databases/czech-words.db",
                    "corpusSize": 12345,
                    "dbType": "sqlite"
                },
                "en": {
                    "path": "/path/to/databases/enf-words.db",
                    "corpusSize": 12345,
                    "dbType": "sqlite"
                }
            }
        },
        "translat": {
            "minLemmaFreq": 2,
            "maxQueryWords": 3,
            "databases": {
                "cs": {
                    "path": "/path/to/databases/czech-words.db",
                    "corpusSize": 12345,
                    "dbType": "sqlite"
                },
                "en": {
                    "path": "/path/to/databases/enf-words.db",
                    "corpusSize": 12345,
                    "dbType": "sqlite"
                }
            }
        }
    }
}

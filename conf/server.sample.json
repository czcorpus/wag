{
    "$schema": "./server-schema.json",
    "address": "localhost",
    "port": 3000,
    "distFilesUrl": "/wag/dist/",
    "theme": "default.less",
    "langCookie": {
        "name": "wag_ui_lang"
    },
    "languages": {
        "en-US": "English",
        "cs-CZ": "Čeština"
    },
    "toolbar": {
        "type": "langSwitch",
        "url": "https://www.korpus.cz/toolbar/toolbar"
    },
    "develServer": {
        "host": "0.0.0.0",
        "port": 9001,
        "urlRootPath": "/wag/"
    },
    "freqDB": {
        "maxQueryWords": 3,
        "minLemmaFreq": 2,
        "similarFreqWordsMaxCtx": 10,
        "database": {
            "path": "/path/to/databases/czech-words.db",
            "corpusSize": 12345,
            "dbType": "sqlite"
        }
    },
    "logging": {
        "path": "/var/log/wag/app.log",
        "rotation": false
    }
}

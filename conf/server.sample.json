{
    "$schema": "./server-schema.json",
    "address": "localhost",
    "port": 3000,
    "staticFilesUrl": "/wdg/assets/",
    "theme": "default.less",
    "langCookie": "wdg_ui_lang",
    "languages": {
        "en-US": "English",
        "cs-CZ": "Čeština"
    },
    "toolbar": {
        "type": "langSwitch",
        "url": "https://www.korpus.cz/toolbar/toolbar"
    },
    "develServer": {
        "port": 9001,
        "urlRootPath": "/wdg/"
    },
    "freqDB": {
        "single": {
            "minLemmaFreq": 2,
            "similarFreqWordsMaxCtx": 10,
            "databases": {
                "cs": "/path/to/databases/czech-words.db",
                "en": "/path/to/databases/eng-words.db"
            }
        },
        "cmp": {
            "minLemmaFreq": 2,
            "databases": {
                "cs": "/path/to/databases/czech-words.db",
                "en": "/path/to/databases/eng-words.db"
            }
        },
        "translat": {
            "minLemmaFreq": 2,
            "databases": {
                "cs": "/path/to/databases/czech-words.db",
                "en": "/path/to/databases/eng-words.db"
            }
        }
    }
}

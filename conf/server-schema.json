{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "FreqDbConf": {
            "properties": {
                "corpusSize": {
                    "type": "number"
                },
                "dbType": {
                    "type": "string"
                },
                "options": {
                    "$ref": "#/definitions/FreqDbOptions"
                },
                "path": {
                    "type": "string"
                }
            },
            "required": [
                "corpusSize",
                "dbType",
                "path"
            ],
            "type": "object"
        },
        "FreqDbOptions": {
            "properties": {
                "httpHeaders": {
                    "additionalProperties": {
                        "type": "string"
                    },
                    "type": "object"
                },
                "korpusDBCrit": {
                    "type": "string"
                },
                "korpusDBNgramCrit": {
                    "type": "string"
                },
                "korpusDBNorm": {
                    "type": "string"
                },
                "maxSingleTypeNgramArf": {
                    "description": "If N, then for any 1, 2,...,N-gram type, the database\nis able to provide similar ARF frequency. I.e. it won't\nmix e.g. 2-grams and 3-grams. If 0 or omitted then we assume that\nwe are not able to support such a feature and the datase\nreturns just any 1, 2,...N-grams matching entered\nARF. This is only supported for 1, 2, 3, 4-grams.",
                    "type": "number"
                },
                "password": {
                    "type": "string"
                },
                "sourceInfoPassword": {
                    "type": "string"
                },
                "sourceInfoUrl": {
                    "type": "string"
                },
                "sourceInfoUsername": {
                    "type": "string"
                },
                "urlArgs": {
                    "additionalProperties": {
                        "type": "string"
                    },
                    "type": "object"
                },
                "username": {
                    "type": "string"
                }
            },
            "type": "object"
        },
        "LangCookieSetup": {
            "properties": {
                "domain": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                }
            },
            "required": [
                "name"
            ],
            "type": "object"
        },
        "LogQueueConf": {
            "properties": {
                "db": {
                    "type": "number"
                },
                "host": {
                    "type": "string"
                },
                "key": {
                    "type": "string"
                },
                "port": {
                    "type": "number"
                }
            },
            "required": [
                "db",
                "host",
                "key",
                "port"
            ],
            "type": "object"
        },
        "ToolbarDef": {
            "properties": {
                "type": {
                    "type": "string"
                },
                "url": {
                    "type": "string"
                }
            },
            "required": [
                "type"
            ],
            "type": "object"
        },
        "WordDbConf": {
            "properties": {
                "database": {
                    "$ref": "#/definitions/FreqDbConf"
                },
                "maxQueryWords": {
                    "type": "number"
                },
                "minLemmaFreq": {
                    "type": "number"
                },
                "similarFreqWordsMaxCtx": {
                    "type": "number"
                }
            },
            "required": [
                "database",
                "maxQueryWords",
                "minLemmaFreq",
                "similarFreqWordsMaxCtx"
            ],
            "type": "object"
        }
    },
    "description": "Server side app configuration.",
    "properties": {
        "CSPDomains": {
            "items": {
                "type": "string"
            },
            "type": "array"
        },
        "address": {
            "type": "string"
        },
        "develServer": {
            "properties": {
                "port": {
                    "type": "number"
                },
                "urlRootPath": {
                    "type": "string"
                }
            },
            "required": [
                "port",
                "urlRootPath"
            ],
            "type": "object"
        },
        "distFilesUrl": {
            "type": "string"
        },
        "freqDB": {
            "$ref": "#/definitions/WordDbConf"
        },
        "import": {
            "type": "string"
        },
        "langCookie": {
            "$ref": "#/definitions/LangCookieSetup"
        },
        "languages": {
            "additionalProperties": {
                "type": "string"
            },
            "type": "object"
        },
        "logQueue": {
            "$ref": "#/definitions/LogQueueConf"
        },
        "logging": {
            "properties": {
                "path": {
                    "type": "string"
                },
                "rotation": {
                    "type": "boolean"
                }
            },
            "type": "object"
        },
        "port": {
            "type": "number"
        },
        "sessions": {
            "properties": {
                "path": {
                    "type": "string"
                },
                "secret": {
                    "type": "string"
                },
                "ttl": {
                    "type": "number"
                }
            },
            "type": "object"
        },
        "toolbar": {
            "$ref": "#/definitions/ToolbarDef"
        }
    },
    "required": [
        "address",
        "develServer",
        "distFilesUrl",
        "freqDB",
        "languages",
        "logging",
        "port",
        "toolbar"
    ],
    "type": "object"
}

